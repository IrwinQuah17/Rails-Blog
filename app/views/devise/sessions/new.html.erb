<style type="text/css">
body {
  background-image: url(data:image/jpeg;base64,);
  background-size: cover;
}

h2 {
  text-align: center;
  color: white;
}

.row {
  border: 3px solid black;
  background-color: #F5F5F5;
}

.form-group {
  margin: auto;
  width: 300px;
  background-color: #F5F5F5;
  padding: 12px;
  border-radius: 4px;
  margin-bottom: 24px;
}

.white {
  color: white;
  font-size: 30px;
}

.fb_link {
  color: white;
  padding: 1em 1.5em;
  text-transform: uppercase;
}
</style>

<h2>Login</h2>

<div class="row">
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "control-label" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "control-label" %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Log in", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<div class="white">
  <% if current_user %>
    Signed in as <strong><%= current_user.name %></strong>!
    <%= link_to "Sign out", signout_path, class: "fb_link" %>
  <% else %>
    <%= link_to "Sign in with Facebook", "/auth/facebook", class: "fb_link" %>
  <% end %>
</div>
<%= yield %>