<style type="text/css">
body {
  background-image: url(data:image/jpeg;base64,);
  background-size: cover;
}

.container {
  background-color: #F5F5F5;
  padding: 24px;
  margin: 24px;
  min-height: 200px;
}

.button {
  text-decoration: none;
  border-radius: 4px;
  border: 1px solid #d1d3d5;
  color: #009BDB;
  text-transform: uppercase;
  background-color: #FFFFFF;
  display: block;
  text-align: center;
  margin: auto;
  width: 120px;
}
.button:hover {
  color: #FFFFFF;
  background-color: #009BDB;
}

.small {
  padding: 6px 12px;
}

h1,
h2 {
  background-color: #2A4550;
  color: white;
  margin: 0;
  padding: 24px;

}

.text_area {
  background-color: black;
  height: 6rem;
  width: 30rem;
  color: #ffffff;
  font-size: 30px;
}

.show {
  font-size: 40px;
}

</style>

<div class="container">
  <p class="show">
    <strong>Title:</strong>
    <%= @article.title %>
  </p>
   
  <p class="show">
    <strong>Text:</strong>
    <%= @article.text %>
  </p>
   
  <h2>Comments</h2>
  	<%= render @article.comments %>
   
  <h2>Add a comment:</h2>
  <%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
    <p>
      <%= form.label :commenter %><br>
      <%= form.text_field :commenter, class: "text_area" %>
    </p>
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body, class: "text_area" %>
    </p>
    <p>
      <%= form.submit %>
    </p>
</div>
<% end %>
 
<%= link_to 'Edit', edit_article_path(@article), class: "small button" %> |
<%= link_to 'Back', articles_path, class: "small button" %>